    <scm>
        <connection>scm:hg:http://hg.kenai.com/hg/btrace~hg</connection>
        <developerConnection>scm:hg:https://hg.kenai.com/hg/btrace~hg</developerConnection>
        <url>http://kenai.com/projects/btrace/sources/hg/show</url>
    </scm>
    
    <repositories>
        <!-- GridKit maven2 repository -->
        <repository>
            <id>gridkit-releases</id>
            <name>gridkit-repo.googlecode.com</name>
            <url>http://gridkit.googlecode.com/svn/repo/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>gridkit-maven</id>
            <url>https://subversion.assembla.com/svn/gridkit-maven/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    
    <modules>
        <module>btrace-parent</module>
        <module>core</module>
        <module>core-api</module>
        <module>runtime</module>
        <module>client</module>
        <module>cli</module>
        <module>asm</module>
        <module>docs</module>
        <module>instr</module>
        <module>compiler</module>
        <module>maven-plugin</module>
        <module>samples</module>
        <module>agent</module>
        <module>boot</module>
        <module>extensions</module>
        <module>extensions/default</module>
        <module>extensions/collections</module>
        <module>extensions/aggregations</module>
        <module>extensions/sys</module>
        <module>extensions/profiling</module>
        <module>extensions/export</module>
        <!--<module>dist</module>-->
    </modules>
    <distributionManagement>
        <repository>
            <id>gridkit-repo.googlecode.com</id>
            <url>svn:https://gridkit.googlecode.com/svn/repo/</url>
        </repository>
    </distributionManagement>
    
    <build>
        <plugins>
            <plugin>
                <inherited>false</inherited>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>wagon-maven-plugin</artifactId>
                <version>1.0-beta-3</version>
                <executions>
                    <execution>
                        <id>upload-build</id>
                        <phase>site-deploy</phase>
                        <goals>
                            <goal>upload</goal>
                        </goals>
                        <configuration>
                            <url>dav:https://kenai.com/website/btrace</url>
                            <serverId>kenai.com</serverId>
                            <fromDir>${basedir}/target/</fromDir>
                            <includes>**/*.zip,**/*.tar.gz</includes>
                            <toDir>testing</toDir>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <inherited>false</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.1</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.wagon</groupId>
                        <artifactId>wagon-webdav</artifactId>
                        <version>1.0-beta-2</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <inherited>false</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <tagNameFormat>v@{project.version}</tagNameFormat>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8.1</version>
                <executions>
                    <execution>
                        <id>aggregate</id>
                        <goals>
                            <goal>aggregate</goal>
                        </goals>
                        <phase>site</phase>
                        <configuration>
                            <!-- Specific configuration for the aggregate report -->
                            ...
                        </configuration>
                    </execution>
                </executions>                    
            </plugin>
        </plugins>
        <extensions>
            <extension>
                <!-- Enables SVN repository access -->
                <groupId>com.google.code.maven-svn-wagon</groupId>
                <artifactId>maven-svn-wagon</artifactId>
                <version>1.4</version>
            </extension>
        </extensions>
    </build>
</project>
